<Window x:Class="Demos.cdlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demos"
        mc:Ignorable="d"
        Title="cdlg" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="211*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Button Content="Cancelar" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Top" Width="75" IsCancel="True" Click="Cancelar_Click"/>
        <Button Content="Aceptar" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Grid.Row="1" Margin="0,0,80,0" IsDefault="True" Click="Aceptar_Click"/>

    </Grid>
</Window>
